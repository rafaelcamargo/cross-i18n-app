{
  "name": "cross-i18n-components",
  "version": "1.0.0",
  "description": "React components library with i18n support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "build:simple": "babel src -d dist --copy-files",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "start": "babel src -d dist --copy-files --watch"
  },
  "peerDependencies": {
    "i18next": "^23.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4"
  },
  "keywords": [
    "react",
    "components",
    "i18n",
    "internationalization",
    "translation"
  ]
}
